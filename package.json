{
	"name": "angular-node-starter",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"start": "npm run _clean && npm run _start:all",
		"_start:all": "run-p \"_start:server\" \"_start:client\"",
		"_start:server": "nodemon -e ts --exec \"npm run _watch:server\"",
		"_watch:server2": "tsc -p ./server && node browserReloadHack.js && node dist/server/app.js",
		"_watch:server": "tsc -p ./server && npm run _reload && node dist/server/app.js",
		"_start:client": "ng serve --proxy-config proxy.conf.json",
		"build": "npm run _clean && npm run _build:all",
		"_build:all": "run-p \"_build:server\" \"_build:client\"",
		"_build:server": "tsc -p ./server",
		"_build:client": "ng build --prod --output-path=dist/client",
		"_clean": "rimraf dist",
		"_reload":"echo hack for livereload > client/assets/browserReloadHack.txt",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^4.0.0",
		"@angular/common": "^4.0.0",
		"@angular/compiler": "^4.0.0",
		"@angular/core": "^4.0.0",
		"@angular/forms": "^4.0.0",
		"@angular/http": "^4.0.0",
		"@angular/platform-browser": "^4.0.0",
		"@angular/platform-browser-dynamic": "^4.0.0",
		"@angular/router": "^4.0.0",
		"bootstrap": "^3.3.7",
		"core-js": "^2.4.1",
		"express": "^4.15.3",
		"lodash": "^4.17.4",
		"rxjs": "^5.1.0",
		"zone.js": "^0.8.4"
	},
	"devDependencies": {
		"@angular/cli": "1.2.0",
		"@angular/compiler-cli": "^4.0.0",
		"@angular/language-service": "^4.0.0",
		"@types/jasmine": "^2.5.53",
		"@types/jasminewd2": "~2.0.2",
		"@types/node": "^6.0.60",
		"codelyzer": "^3.0.1",
		"jasmine-core": "~2.6.2",
		"jasmine-spec-reporter": "~4.1.0",
		"karma": "~1.7.0",
		"karma-chrome-launcher": "~2.1.1",
		"karma-cli": "~1.0.1",
		"karma-coverage-istanbul-reporter": "^1.2.1",
		"karma-jasmine": "~1.1.0",
		"karma-jasmine-html-reporter": "^0.2.2",
		"nodemon": "^1.11.0",
		"npm-run-all": "^4.0.2",
		"protractor": "~5.1.2",
		"rimraf": "^2.6.1",
		"ts-node": "~3.0.4",
		"tslint": "~5.3.2",
		"typescript": "~2.3.3",
		"write": "^0.3.3"
	}
}
